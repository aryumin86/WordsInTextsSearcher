@page "/login"

<div class="card mt-5 mx-auto" style="width:30rem;">
    <div class="card-header">
        Залогиниться
    </div>
    <div class="card-body">
        <form>
            <div class="form-group row">
                <label for="login" class="col-3 col-form-label">Логин</label>
                <div class="col-9">
                    <input type="text" class="form-control" id="login">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-3 col-form-label">Пароль</label>
                <div class="col-9">
                    <input type="password" class="form-control" id="inputPassword">
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button class="btn btn-primary float-right">Войти</button>
                </div>
            </div>
        </form>
    </div>
</div>


